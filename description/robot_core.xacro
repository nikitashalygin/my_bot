<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    
    <xacro:include filename="inertial_macros.xacro"/>

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <!-- BASE LINK -->

    <link name="base_link">

    </link>

    <!-- CHASSIS LINK -->

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.1 0 0"/>
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.09 0 0.03" rpy="0 0 0"/>
            <geometry>
                <box size="0.18 0.08 0.06"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0.09 0 0.03" rpy="0 0 0"/>
            <geometry>
                <box size="0.18 0.08 0.06"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="2" x="0.18" y="0.08" z="0.06">
            <origin xyz="0.09 0 0.03" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <!-- LEFT WHEEL A LINK -->

    <joint name="left_wheel_a_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel_a"/>
        <origin xyz="0.06 0.05 0.01" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_wheel_a">
        <visual>
            <geometry>
                <cylinder radius="0.03" length="0.025"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.03" length="0.025"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.01" length="0.025" radius="0.03">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- RIGHT WHEEL A LINK -->

    <joint name="right_wheel_a_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel_a"/>
        <origin xyz="0.06 -0.05 0.01" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="right_wheel_a">
        <visual>
            <geometry>
                <cylinder radius="0.03" length="0.025"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.03" length="0.025"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.01" length="0.025" radius="0.03">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- LEFT WHEEL B LINK -->

    <joint name="left_wheel_b_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel_b"/>
        <origin xyz="-0.08 0.05 0.01" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_wheel_b">
        <visual>
            <geometry>
                <cylinder radius="0.03" length="0.025"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.03" length="0.025"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.01" length="0.025" radius="0.03">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- RIGHT WHEEL B LINK -->

    <joint name="right_wheel_b_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel_b"/>
        <origin xyz="-0.08 -0.05 0.01" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="right_wheel_b">
        <visual>
            <geometry>
                <cylinder radius="0.03" length="0.025"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.03" length="0.025"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.01" length="0.025" radius="0.03">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

</robot>